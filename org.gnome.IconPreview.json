{
    "app-id" : "org.gnome.IconPreview",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "gnome-icon-preview",
    "finish-args" : [
        "--share=ipc",
        "--device=dri",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=home",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "modules" : [
        {
            "name" : "libdazzle",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libdazzle.git",
                    "tag" : "3.32.1",
                    "commit" : "7e3154edeecd97aef8bd4a89e3c2fe941e0ef59f"
                }
            ]
        },
        {
            "name" : "libhandy",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dglade_catalog=disabled"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://source.puri.sm/Librem5/libhandy.git",
                    "tag" : "v0.0.9",
                    "commit" : "56b0aa62f6251ee19a88fc208b7ca8dcf9c9633c"
                }
            ],
            "cleanup" : [
                "/bin"
            ]
        },
        {
            "name" : "icon-preview",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/World/design/icon-preview.git"
                }
            ]
        }
    ],
    "build-options" : {
        "env" : {
        }
    }
}
